{
  "name": "now-listening",
  "version": "1.4.0",
  "description": "A CLI application for sharing currently playing music to Slack",
  "type": "module",
  "homepage": "https://github.com/thispastwinter/now-listening",
  "repository": {
    "type": "git",
    "url": "https://github.com/thispastwinter/now-listening"
  },
  "keywords": [
    "slack",
    "music",
    "apple music",
    "spotify",
    "macos",
    "applescript"
  ],
  "scripts": {
    "start": "node ./bin/now-listening.js",
    "build": "rollup -c",
    "dev": "nodemon -e js,ts --watch src --exec \"run-s build start\"",
    "test:unit": "vitest --watch",
    "test:unit:ci": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:prettier": "npx prettier . --check",
    "test:prettier:fix": "npx prettier . --write",
    "test:lint": "eslint ./src",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:types": "tsc --pretty --noEmit",
    "test:ci": "cross-env CI=true run-s test:prettier test:lint test:types test:unit:ci",
    "pretest:unit": "npm run build",
    "pretest:unit:coverage": "npm run build",
    "prepublishOnly": "run-s test:unit:ci build"
  },
  "main": "dist/app.js",
  "bin": {
    "now-listening": "bin/now-listening.js"
  },
  "author": "Justin Klaas",
  "license": "LGPL-3.0-only",
  "dependencies": {
    "applescript": "^1.0.0",
    "axios": "1.1.3",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "figlet": "^1.6.0",
    "inquirer": "^9.2.8",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "package-json": "^8.1.1",
    "semver": "^7.5.4",
    "semver-diff": "^4.0.0",
    "source-map-support": "^0.5.21",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/node-cron": "^3.0.8",
    "@types/semver": "^7.5.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "msw": "^1.2.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rollup": "^3.26.3",
    "strip-ansi": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  }
}
