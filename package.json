{
  "name": "now-listening",
  "version": "1.3.3",
  "description": "A CLI application for sharing currently playing music to Slack",
  "type": "module",
  "homepage": "https://github.com/thispastwinter/now-listening",
  "repository": {
    "type": "git",
    "url": "https://github.com/thispastwinter/now-listening"
  },
  "keywords": [
    "slack",
    "music",
    "apple music",
    "spotify",
    "macos",
    "applescript"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "test:unit": "vitest --watch",
    "test:unit:ci": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:prettier": "npx prettier . --check",
    "test:prettier:fix": "npx prettier . --write",
    "test:ci": "cross-env CI=true run-s test:prettier test:unit:ci",
    "prepublishOnly": "run-s test:unit:ci build"
  },
  "main": "dist/app.js",
  "bin": {
    "now-listening": "bin/now-listening.js"
  },
  "author": "Justin Klaas",
  "license": "ISC",
  "dependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "applescript": "^1.0.0",
    "axios": "1.1.3",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.8",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "package-json": "^8.1.1",
    "semver": "^7.5.4",
    "semver-diff": "^4.0.0",
    "update-notifier": "^6.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/inquirer": "^9.0.3",
    "@types/node-cron": "^3.0.8",
    "@types/semver": "^7.5.0",
    "@types/update-notifier": "^6.0.4",
    "@vitest/coverage-v8": "^0.33.0",
    "cross-env": "^7.0.3",
    "msw": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rollup": "^3.26.3",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0",
    "vitest-mock-extended": "^1.1.4"
  }
}
