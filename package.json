{
  "name": "now-listening",
  "version": "1.3.0",
  "description": "A CLI application for sharing currently playing music to Slack",
  "type": "module",
  "homepage": "https://github.com/thispastwinter/now-listening",
  "repository": {
    "type": "git",
    "url": "https://github.com/thispastwinter/now-listening"
  },
  "keywords": [
    "slack",
    "music",
    "apple music",
    "spotify",
    "macos",
    "applescript"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "test:unit": "jest --watch",
    "test:unit:ci": "jest --ci --runInBand",
    "test:prettier": "npx prettier . --check",
    "test:prettier:fix": "npx prettier . --write",
    "test:ci": "cross-env CI=true run-s test:prettier test:unit:ci",
    "prepublishOnly": "run-s test:unit:ci build"
  },
  "main": "dist/app.js",
  "bin": {
    "now-listening": "bin/now-listening.js"
  },
  "author": "Justin Klaas",
  "license": "ISC",
  "dependencies": {
    "applescript": "^1.0.0",
    "axios": "1.1.3",
    "inquirer": "^9.2.8",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.3",
    "@types/node-cron": "^3.0.8",
    "cross-env": "^7.0.3",
    "jest": "^29.6.1",
    "msw": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rollup": "^3.26.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
